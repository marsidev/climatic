{
  "private": true,
  "author": {
    "name": "Luis Marsiglia",
    "email": "marsiglia.business@gmail.com"
  },
  "name": "climatic",
  "description": "Climatic is a weather forecast app.",
  "version": "1.0.0",
  "license": "ISC",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm run --parallel build",
    "start": "pnpm --filter=server start",
    "dev": "run-p -l -r dev:server dev:client",
    "dev:https": "run-p -l -r dev:server dev:client:https",
    "dev:server": "pnpm --filter=server dev",
    "dev:client": "pnpm --filter=client dev",
    "dev:client:https": "pnpm --filter=client dev:https",
    "start:all": "pnpm build && pnpm start",
    "lint": "pnpm run --parallel lint",
    "lint:fix": "pnpm run -r lint:fix",
    "tsc": "pnpm run --parallel tsc",
    "test": "run-p test:server test:client test:shared",
    "test:watch": "run-p test:server:watch test:client:watch",
    "test:server": "pnpm --filter=server test",
    "test:server:watch": "pnpm --filter=server test:watch",
    "test:client": "pnpm --filter=client test",
    "test:client:watch": "pnpm --filter=client test:watch",
    "test:shared": "pnpm --filter=shared test",
    "test:shared:watch": "pnpm --filter=shared test:watch",
    "prebuild": "npm i -g pnpm && pnpm i"
  },
  "devDependencies": {
    "@types/node": "17.0.43",
    "@typescript-eslint/eslint-plugin": "5.27.1",
    "@typescript-eslint/parser": "5.27.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.17.0",
    "eslint-config-xo": "0.41.0",
    "npm-run-all": "4.1.5",
    "tslib": "2.4.0",
    "typescript": "4.7.3"
  },
  "packageManager": "pnpm@7.1.6",
  "pnpm": {
    "overrides": {
      "client": "workspace:*",
      "server": "workspace:*",
      "shared": "workspace:*"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ],
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  },
  "engines": {
    "node": "14.x",
    "pnpm": "7.x"
  },
  "keywords": [
    "weather",
    "rapidapi",
    "hackathon",
    "fastify",
    "vite",
    "react",
    "chakra-ui",
    "typescript"
  ]
}
