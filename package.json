{
  "private": true,
  "author": {
    "name": "Luis Marsiglia",
    "email": "marsiglia.business@gmail.com"
  },
  "name": "climatic",
  "description": "Climatic is a weather forecast app.",
  "version": "1.0.0",
  "license": "ISC",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm run --parallel build",
    "start": "pnpm --filter server start",
    "dev": "pnpm run --parallel --filter server --filter client dev",
    "dev-server": "pnpm --filter server dev",
    "dev-client": "pnpm --filter client dev",
    "dev-client-https": "pnpm --filter client dev-https",
    "start-all": "pnpm build && pnpm start",
    "lint": "pnpm run --parallel lint",
    "lint-fix": "pnpm run --parallel lint-fix",
    "tsc": "pnpm run --parallel tsc",
    "heroku": "git push heroku HEAD:main",
    "up-all": "pnpm -r up",
    "prebuild": "npm i -g pnpm && pnpm i"
  },
  "devDependencies": {
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.16.0",
    "eslint-config-xo": "^0.41.0",
    "tslib": "^2.4.0",
    "typescript": "4.6.4"
  },
  "packageManager": "pnpm@7.1.6",
  "pnpm": {
    "overrides": {
      "client": "workspace:*",
      "server": "workspace:*",
      "shared": "workspace:*"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ],
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  },
  "engines": {
    "node": "14.x",
    "pnpm": "7.x"
  },
  "keywords": [
    "weather",
    "rapidapi",
    "hackathon",
    "fastify",
    "vite",
    "react",
    "chakra-ui",
    "typescript"
  ]
}
