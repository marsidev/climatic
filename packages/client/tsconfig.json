{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],

      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      
      "@lib": ["src/lib"],
      "@lib/*": ["src/lib/*"],
      
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],

      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"]
    },
    "module": "es2022"
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "./dist/**/*"],
  "moduleResolution": ["node_modules", "node"]
}