{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "types": ["vite/client", "node"],
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@lib/*": ["src/lib/*"],
      "@services/*": ["src/services/*"],
      "@styles/*": ["src/styles/*"],
      "@types": ["src/types/types.d.ts"],
      "@utils/*": ["src/utils/*"],
      "@server/*": ["../server/src/*"],
    },
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "pretty": true,
    "removeComments": true,
    "rootDir": ".",
    "outDir": "./build",
    "noUnusedLocals": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "moduleResolution": ["node_modules", "node"]
}