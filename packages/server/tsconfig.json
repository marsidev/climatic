{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],

      "@app": ["src/app"],
      "@server": ["src/server"],
      
      "@lib": ["src/lib"],
      "@lib/*": ["src/lib/*"],
      
      "@plugins": ["src/plugins"],
      "@plugins/*": ["src/plugins/*"],
      
      "@routes": ["src/routes"],
      "@routes/*": ["src/routes/*"],
      
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
    },
    "declarationDir": "dist/types"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "./dist/**/*"],
}