{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@controllers/*": ["src/controllers/*"],
      "@lib/*": ["src/lib/*"],
      "@plugins/*": ["src/plugins/*"],
      "@types": ["src/types"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "./dist/**/*"],
  "moduleResolution": ["node_modules", "node"]
}