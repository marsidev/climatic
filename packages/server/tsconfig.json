{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		},
		"declarationDir": "dist/types",
		"types": ["node", "vitest/globals"],
		"typeRoots": ["src/types"],
		"module": "ESNext"
	},
	"include": ["src/**/*.ts", "tests/**/*.ts", "vite.config.ts"],
	"exclude": ["node_modules", "./dist/**/*"]
}
