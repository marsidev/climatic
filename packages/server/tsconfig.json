{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      
      "@lib": ["src/lib"],
      "@lib/*": ["src/lib/*"],
      
      "@plugins": ["src/plugins"],
      "@plugins/*": ["src/plugins/*"],
      
      "@routes": ["src/routes"],
      "@routes/*": ["src/routes/*"],
      
      "@types": ["src/types"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "./dist/**/*"],
  "moduleResolution": ["node_modules", "node"]
}